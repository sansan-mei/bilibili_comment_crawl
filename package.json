{
  "name": "bilibili-crawler",
  "version": "1.0.0",
  "description": "Bilibili comment crawler in JS",
  "author": "MEI YI YI",
  "bin": {
    "bil-crawl": "./crawl.mjs"
  },
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "node --env-file=.env crawl.mjs -cmd",
    "start": "bun run crawl.mjs",
    "electron": "electron .",
    "build": "bun run electron/build.mjs"
  },
  "type": "module",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "inquirer": "^12.5.0",
    "protobufjs": "^7.4.0",
    "puppeteer-core": "^24.4.0",
    "user-agents": "^1.1.475"
  },
  "optionalDependencies": {
    "vosk": "^0.3.39"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.10.0",
    "@types/user-agents": "^1.0.4",
    "@types/vosk": "^0.3.1",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "dotenv": "^16.5.0"
  },
  "imports": {
    "#export/*": "./export/*.mjs",
    "#utils/*": "./utils/*.mjs",
    "#crawl": "./crawl.mjs"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "license": "GPL-3.0-only",
  "build": {
    "appId": "com.bilibili.crawler",
    "productName": "Bilibili脚本",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "electronDownload": {
      "mirror": "https://registry.npmmirror.com/-/binary/electron/"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/@ffmpeg-installer/**/*",
      "**/node_modules/vosk/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": {
        "target": "nsis"
      }
    },
    "portable": {
      "artifactName": "Bilibili脚本.exe"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "artifactName": "Bilibili脚本.dmg"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  }
}

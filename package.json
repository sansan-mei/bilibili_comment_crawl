{
  "name": "bilibili-crawler",
  "version": "1.0.0",
  "description": "Bilibili comment crawler in JS",
  "author": "MEI YI YI",
  "bin": {
    "bil-crawl": "./crawl.mjs"
  },
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "node --env-file=.env crawl.mjs -cmd",
    "start": "bun run crawl.mjs",
    "electron": "electron .",
    "build": "bun run electron/build.mjs"
  },
  "type": "module",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@hapi/hapi": "^21.4.0",
    "@hapi/inert": "^7.1.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "inquirer": "^12.5.0",
    "protobufjs": "^7.4.0",
    "puppeteer-core": "^24.4.0",
    "user-agents": "^1.1.475"
  },
  "optionalDependencies": {
    "vosk": "^0.3.39"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.10.0",
    "@types/user-agents": "^1.0.4",
    "@types/vosk": "^0.3.1",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "imports": {
    "#export/*": "./export/*.mjs",
    "#utils/*": "./utils/*.mjs",
    "#crawl": "./crawl.mjs"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "license": "GPL-3.0-only",
  "build": {
    "appId": "com.bilibili.crawler",
    "productName": "Bilibili脚本",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/@ffmpeg-installer/**/*",
      "**/node_modules/vosk/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "electronDownload": {
      "mirror": "https://registry.npmmirror.com/-/binary/electron/"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "arch": [
        "x64",
        "arm64"
      ]
    },
    "dmg": {
      "artifactName": "Bilibili脚本.dmg"
    },
    "files": [
      "**/*",
      "!**/{.git,.idea,.vscode,__pycache__,node_modules/*/test/**}",
      "!**/*.{md,ts,yml}"
    ]
  }
}
